{
    "presets": [
        [
            "@babel/env",
            {
                "modules": false,
                "targets": "> 5%"
            }
        ]
    ],
    "plugins": [
        "@babel/plugin-proposal-class-properties"
    ],
    "env": {
        "test": {
            "retainLines": true,
            "sourceMaps": "inline",
            "presets": [
                [
                    "@babel/env",
                    {
                        "targets": {
                            "node": "current"
                        }
                    }
                ]
            ],
            "plugins": ["istanbul"]
        }
    }
}